#!/bin/bash

sudo apt-add-repository "deb http://archive.canonical.com/ubuntu $(lsb_release -sc) partner"
sudo apt-add-repository 'ppa:cassou/emacs'
sudo apt-add-repository 'ppa:nesthib/weechat-stable'
sudo add-apt-repository 'deb https://get.docker.com/ubuntu docker main'
sudo apt-key adv \
  --keyserver 'hkp://keyserver.ubuntu.com:80' \
  --recv-keys '36A1D7869245C8950F966E92D8576A8BA88D21E9'

sudo apt-get update

sudo apt-get install \
  curl \
  default-jre \
  emacs24 \
  exuberant-ctags \
  git \
  iotop \
  lxc-docker \
  lynx \
  nmap \
  p7zip-full \
  pwgen \
  ruby2.0 \
  tmux \
  traceroute \
  tree \
  unclutter \
  weechat \
  whois \
  xclip \
  zsh

# if there is a graphical environment
if [[ -n "${DISPLAY}" ]]; then
  sudo apt-get install \
    account-plugin-irc \
    backintime-gnome \
    chromium-browser \
    gnome-tweak-tool \
    gparted \
    inkscape \
    mixxx \
    mplayer \
    network-manager-openconnect-gnome \
    skype \
    vlc
fi
