#!/bin/bash -x

sudo apt-add-repository "deb http://archive.canonical.com/ubuntu $(lsb_release -sc) partner"

# sudo apt-add-repository "deb http://linux.dropbox.com/ubuntu/ $(lsb_release -sc) main"

curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo apt-add-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable"

# arc-theme
# wget -O- http://download.opensuse.org/repositories/home:Horst3180/xUbuntu_16.04/Release.key | sudo apt-key add -
# sudo apt-add-repository "deb http://download.opensuse.org/repositories/home:/Horst3180/xUbuntu_16.04/ /"

sudo apt-add-repository "deb https://packages.cloud.google.com/apt cloud-sdk main"
wget -O- https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo apt-key add -

sudo add-apt-repository ppa:mmstick76/alacritty

sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-key C99B11DEB97541F0
sudo apt-add-repository https://cli.github.com/packages

sudo apt-get update

sudo apt-get install \
     alacritty \
     aspell-de \
     aspell-en \
     autojump \
     colordiff \
     curl \
     default-jre \
     editorconfig \
     emacs-nox \
     exuberant-ctags \
     fdclone \
     iotop \
     docker-ce docker-ce-cli containerd.io \
     gh \
     git \
     google-cloud-sdk \
     google-cloud-sdk-gke-gcloud-auth-plugin \
     libglib2.0-0 libxcb-shape0 libxcb-shm0 libxcb-xfixes0 libxcb-randr0 libxcb-image0 libfontconfig1 libgl1-mesa-glx libxi6 libsm6 libxrender1 libpulse0 libxcomposite1 libxslt1.1 libsqlite3-0 libxcb-keysyms1 libxcb-xtest0 \
     iotop \
     jq \
     source-highlight \
     lynx \
     nmap \
     pass \
     pdftk \
     p7zip-full \
     pwgen \
     redshift \
     ruby \
     shellcheck \
     silversearcher-ag \
     tmux \
     traceroute \
     trash-cli \
     tree \
     unclutter \
     whois \
     xclip \
     zsh

